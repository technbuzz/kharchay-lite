{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@kh/common/api-interface": ["libs/common/api-interface/src/index.ts"],
      "@kh/common/environments": ["libs/common/environments/src/index.ts"],
      "@kh/mobile/create/data-access": [
        "libs/mobile/create/data-access/src/index.ts"
      ],
      "@kh/mobile/create/feature": ["libs/mobile/create/feature/src/index.ts"],
      "@kh/mobile/create/ui": ["libs/mobile/create/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
